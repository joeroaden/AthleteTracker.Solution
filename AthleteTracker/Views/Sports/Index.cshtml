@{
  Layout = "_Layout";
}

@using AthleteTracker.Models;

<div class="container">
  <div class="jumbotron text-center">
    <h2>Sports</h2>
  </div>
  @if (@Model.Count == 0)
  {
    <h3>No sports have been added yet.</h3>
  }

  <ul>
    @foreach(Sport sport in Model)
    {
      <li>@Html.ActionLink($"{sport.Description}", "Details", new { id = sport.SportId })</li>
    }
  </ul>

  <p>@Html.ActionLink("Add new sport", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>