@{
  Layout = "_Layout";
}

@model AthleteTracker.Models.Sport;
<div class="container">
  <div class="jumbotron text-center">
<h2>Sport Details</h2>
  </div>
<hr />
<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This sport does not contain any atheletes</p>
}
else 
{
  <h4>Athletes the sport contains:</h4>
  <ul>
    @foreach (var join in Model.JoinEntities)
    {
      <li>@join.Athlete.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new athelete", "Create", "Athletes")</p>
<p>@Html.ActionLink("Edit Sport", "Edit", new { id = Model.SportId }) </p>
<p>@Html.ActionLink("Delete Sport", "Delete", new { id = Model.SportId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>
</div>