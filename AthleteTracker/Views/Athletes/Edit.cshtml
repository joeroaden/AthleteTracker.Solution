@{
  Layout = "_Layout";
}

@model AthleteTracker.Models.Athlete
@using static AthleteTracker.Models.Sport

<h2>Edit</h2>

<h4>Edit this athlete: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.AthleteId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.Label("Select sponsor")
    @Html.DropDownList("SponsorId")

    @Html.Label("Select sport")
    @Html.DropDownList("SportId")

    @Html.Label("Date went pro")
    @Html.TextBoxFor(model => model.Date, new { type="date"})

    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Add a Sponsor", "AddSponsor", new { id = Model.AthleteId })</p>

<p>@Html.ActionLink("Back to list", "Index")</p>