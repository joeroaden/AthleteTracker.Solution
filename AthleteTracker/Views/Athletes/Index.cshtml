@{
  Layout = "_Layout";
}

@using AthleteTracker.Models;
@model List<AthleteTracker.Models.Athlete>;

<h1>Athletes</h1>

@if (@Model.Count == 0)
{
  <h3>No athletes have been added yet!</h3>
} 

@foreach (Athlete athlete in Model)
{
  <li>@Html.ActionLink($"{athlete.Name}", "Details", new { id = athlete.AthleteId }) </li>
}


<p>@Html.ActionLink("Add new athlete", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>