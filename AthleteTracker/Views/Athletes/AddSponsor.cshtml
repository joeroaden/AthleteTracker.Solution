@{
  Layout = "_Layout";
}

@model AthleteTracker.Models.Athlete

<h2>Add a sponsor</h2>

<h4>Add a sponsor to this Athlete: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.AthleteId)

    @Html.Label("Select sponsor")
    @Html.DropDownList("SponsorId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>